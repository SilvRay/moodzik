        <p class="type">Playlist</p>
        <h1 class="songName">{{firstTrack.track.album.name}}</h1>
        <p class="owner artistName">{{playlist.owner.display_name}}</p>
        <p class="totalSongs">{{totalSongs}} songs - 2023</p>
        <p class="playlistName">{{playlist.name}}</p>

        <div class="track-list">
          {{#each playlist.tracks.items}}
          <div class="song" id="song-{{@index}}" data-preview-url="{{this.track.preview_url}}">
            <h3>{{this.track.name}}</h3>
            <p>By {{this.track.artists.0.name}}</p>
          </div>
          {{/each}}
        </div>
      </div>
    </div>

    <div class="current-track-info">
      <p class="current-song-name"></p>
