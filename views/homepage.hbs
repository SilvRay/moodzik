<main class="homepage">
  <header class="h-profile">
    <div class="info-profile">
      <div class="pic-container">
        <input
          type="file"
          name="avatar"
          id="avatar"
          accept="image/png, image/jpeg image/jpg"
          onchange="previewAvatar(event)"
        />
        <img
          id="avatar-preview"
          src=""
          alt="Avatar preview"
          style="display:none;"
        />
      </div>

      <section class="details-profile">
        <div class="icons">
          <a href="/profile-edit">
            <i class="fa-light fa-pen"></i>
          </a>
        </div>
        <div>
          <p>
            <span>Username</span>
            <span>{{user.username}}</span>
          </p>
          <p>
            <span>Email</span>
            <span>{{user.email}}</span>
          </p>
          <p>
            <span>Genres</span>
            <span class="g-list">{{user.genres}}</span>
          </p>
        </div>
      </section>
    </div>

    <div class="menu-profile">
      <a href="/albums" class="homepage">Albums</a>
      <a href="/album-new" class="create-album">Create an album</a>
      <a href="/genres" class="create-album">Modify Genres</a>
    </div>
  </header>

  <div class="playlists-container">
    {{#each playlists}}
      <div class="playlist-content">
        <a href="/playlist/{{id}}">
          <img src="{{images.0.url}}" alt="" />
          <h2>{{name}}</h2>
        </a>
      </div>
    {{/each}}
  </div>
</main>